{
  "name": "@seed-cloud/frontend",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "sourceRoot": "apps/frontend/src",
  "targets": {
    "dev": {
      "executor": "@nx/vite:dev-server",
      "options": {
        "buildTarget": "@seed-cloud/frontend:build",
        "mode": "development"
      }
    },
    "build": {
      "executor": "@nx/vite:build",
      "dependsOn": ["^build"],
      "options": {
        "outputPath": "apps/frontend/dist",
        "skipTypeCheck": true
      },
      "outputs": ["{projectRoot}/dist"],
      "configurations": {
        "development": {
          "mode": "development"
        },
        "production": {
          "mode": "production"
        }
      }
    },
    "preview": {
      "executor": "@nx/vite:preview-server",
      "dependsOn": ["build"],
      "options": {
        "buildTarget": "@seed-cloud/frontend:build"
      }
    },
    "type-check": {
      "executor": "nx:run-commands",
      "options": {
        "command": "vue-tsc --noEmit --skipLibCheck",
        "cwd": "apps/frontend"
      }
    },
    "lint": {
      "executor": "nx:run-commands",
      "options": {
        "command": "eslint src --fix",
        "cwd": "apps/frontend"
      }
    },
    "test": {
      "executor": "@nx/vitest:test",
      "options": {
        "reportsDirectory": "../../coverage/apps/frontend",
        "config": "apps/frontend/vitest.config.ts"
      },
      "configurations": {
        "watch": {
          "watch": true
        },
        "coverage": {
          "coverage": true
        }
      }
    }
  },
  "tags": ["type:app", "platform:web"]
}
